                                x:Name="backward"
                       Grid.Column="0"
                        
                           FontFamily="SemiBold" 
                            FontSize="20"
                            Foreground="White" 
                            Background="#8585d6" 
                            BorderThickness="0" 
                            Width="150" Height="50"
