                        />-->
            <!--<Button Content="Проверить"
                                x:Name="check"
                       Grid.Column="1"
                        
                        FontFamily="SemiBold" 
                            FontSize="20"
                            Foreground="White" 
                            Background="#8585d6" 
                            BorderThickness="0" 
                            Width="150" Height="50"
                            Margin="5" Click="check_Click" 
                        />-->
            <!--<Button Content="Далее"
                                x:Name="forward"
                       Grid.Column="2"
                        
                        FontFamily="SemiBold" 
                            FontSize="20"
                            Foreground="White" 
                            Background="#8585d6" 
                            BorderThickness="0" 
                            Width="150" Height="50"
                            Margin="5" Click="forward_Click" 
                        />-->
            <Button Content="Принять"
                    x:Name="forward"
                    Grid.Column="1"                     
                    FontFamily="SemiBold" 
                    FontSize="15"
                    Foreground="White" 
                    Background="#8585d6" 
                    BorderThickness="0" 
                    Width="150" Height="30"
                    Click="forward_Click" 
                    Margin="0 2 15 5" 
                    Visibility="Hidden"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                        />
                       
        </Grid>

    </Grid>
</UserControl>
