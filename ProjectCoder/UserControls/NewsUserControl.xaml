<UserControl x:Class="ProjectCoder.UserControls.NewsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCoder.UserControls"
             mc:Ignorable="d" 
             MinHeight="150" Width="300">
    <Border Background="#ababe3" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <TextBlock Margin="10" Grid.Row="0" x:Name="newsTextBlock" TextWrapping="Wrap"/>
            <TextBlock HorizontalAlignment="Right" Grid.Row="1" x:Name="dateTextBlock" TextWrapping="Wrap" />
        </Grid>
            
    </Border>
</UserControl>
